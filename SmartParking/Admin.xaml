<Page x:Class="SmartParking.Admin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartParking"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Admin" Background="#F0F2F5">

    <Grid>
        <!-- Définir les lignes pour organiser les éléments -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Texte pour les places libres -->
        <TextBlock Grid.Row="0" 
                   x:Name="TextLibre" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Text="Places libres : 0" />

        <!-- Texte pour les places occupées -->
        <TextBlock Grid.Row="1" 
                   x:Name="TextOccupe" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Text="Places occupées : 0" />

        <!-- Texte pour les places réservées -->
        <TextBlock Grid.Row="2" 
                   x:Name="TextReserve" 
                   FontSize="20" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Text="Places réservées : 0" />
    </Grid>
</Page>
