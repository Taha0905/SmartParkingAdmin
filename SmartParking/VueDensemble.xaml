<Page x:Class="SmartParking.VueDensemble"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SmartParking"
      mc:Ignorable="d" 
      d:DesignHeight="1040" d:DesignWidth="1500"
      Title="VueDensemble" Background="White">

    <Grid>
        <!-- Définition des lignes -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <!-- Ligne du haut pour les places -->
            <RowDefinition Height="3*" />
            <!-- Ligne du bas pour du contenu supplémentaire -->
        </Grid.RowDefinitions>

        <!-- Définition des colonnes (6 colonnes) -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Places disponibles -->
        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Background="#EAF8F0" CornerRadius="15" Padding="20" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🚗 Places disponibles" FontWeight="Bold" FontSize="28" Foreground="#48BB78" TextAlignment="Center"/>
                <TextBlock x:Name="TextLibre" Text="0" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Places occupées -->
        <Border Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2" Background="#FBE9E9" CornerRadius="15" Padding="20" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🚧 Places occupées" FontWeight="Bold" FontSize="28" Foreground="#E53E3E" TextAlignment="Center"/>
                <TextBlock x:Name="TextOccupe" Text="0" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Places réservées -->
        <Border Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Background="#FFF3CD" CornerRadius="15" Padding="20" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🔒 Places réservées" FontWeight="Bold" FontSize="28" Foreground="#ECC94B" TextAlignment="Center"/>
                <TextBlock x:Name="TextReserve" Text="0" FontSize="50" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
            </StackPanel>
        </Border>

        <!-- Zone supplémentaire en bas (à remplir plus tard) -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="6" Background="Transparent" Padding="20" Margin="20">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="🔹 Contenu supplémentaire ici 🔹" FontWeight="Bold" FontSize="22" Foreground="Gray" TextAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Page>
