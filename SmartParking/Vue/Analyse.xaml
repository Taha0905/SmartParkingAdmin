<Page x:Class="SmartParking.Analyse"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="960" d:DesignWidth="1720" Background="#1E1E1E"
      Title="Analyse">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Titre -->
        <Border Background="#2B2B2B" Padding="20" Margin="-20,0,-20,20" CornerRadius="10">
            <TextBlock Text="🅿 État du Parking" 
                       Foreground="White"
                       FontSize="32" FontWeight="Bold"
                       HorizontalAlignment="Center"/>
        </Border>

        <!-- Contenu principal -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="1080">
            <UniformGrid Columns="2" Rows="2" Margin="15" HorizontalAlignment="Center">

                <!-- Température -->
                <Border Background="#FFE8D055" CornerRadius="10" Padding="15" Margin="12"
                        Width="480" Height="300">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <material:PackIcon Kind="Thermometer" Width="100" Height="100" Foreground="#FFA01C1C"/>
                        <TextBlock x:Name="txtTemperature" Text="25°C" Foreground="#2B2B2B" FontSize="30" 
                                   FontWeight="Medium" TextAlignment="Center" Margin="0,15,0,0"/>
                        <TextBlock Text="Température" Foreground="Gray" FontSize="20" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Humidité -->
                <Border Background="#FFE8D055" CornerRadius="10" Padding="15" Margin="12"
                        Width="480" Height="300">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <material:PackIcon Kind="WaterPercent" Width="100" Height="100" Foreground="#FF2870A7"/>
                        <TextBlock x:Name="txtHumidite" Text="50%" Foreground="#2B2B2B" FontSize="30" 
                                   FontWeight="Medium" TextAlignment="Center" Margin="0,15,0,0"/>
                        <TextBlock Text="Humidité" Foreground="Gray" FontSize="20" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- CO₂ -->
                <Border Background="#FFE8D055" CornerRadius="10" Padding="15" Margin="12"
                        Width="480" Height="300">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <material:PackIcon Kind="MoleculeCo2" Width="100" Height="100" Foreground="#FF2A7914"/>
                        <TextBlock x:Name="txtCO2" Text="400 ppm" Foreground="#2B2B2B" FontSize="30" 
                                   FontWeight="Medium" TextAlignment="Center" Margin="0,15,0,0"/>
                        <TextBlock Text="CO₂" Foreground="Gray" FontSize="20" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

                <!-- Niveau sonore -->
                <Border Background="#FFE8D055" CornerRadius="10" Padding="15" Margin="12"
                        Width="480" Height="300">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <material:PackIcon Kind="VolumeHigh" Width="100" Height="100" Foreground="Black"/>
                        <TextBlock x:Name="txtSon" Text="60 dB" Foreground="#2B2B2B" FontSize="30" 
                                   FontWeight="Medium" TextAlignment="Center" Margin="0,15,0,0"/>
                        <TextBlock Text="Niveau Sonore" Foreground="Gray" FontSize="20" 
                                   TextAlignment="Center"/>
                    </StackPanel>
                </Border>

            </UniformGrid>
        </StackPanel>
    </Grid>
</Page>
