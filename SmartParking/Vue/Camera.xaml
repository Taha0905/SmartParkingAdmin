<Page x:Class="SmartParking.Camera"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d" 
      d:DesignHeight="1040" d:DesignWidth="1500"
      Title="Vidéosurveillance">

    <Page.Resources>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.9"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1E2C" Offset="0"/>
                <GradientStop Color="#121420" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="#252A41" Padding="20" Margin="0,0,0,20">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <material:PackIcon Kind="Cctv" Width="32" Height="32" Foreground="#4FD1C5" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="VIDÉOSURVEILLANCE" 
                               Foreground="White"
                               FontSize="24" FontWeight="SemiBold"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.2" Color="Black"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <TextBlock Text="Flux en direct" Foreground="#4FD1C5" FontSize="14" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="20,0">
            <!-- Zone vidéo -->
            <Border Background="#2E3A59" CornerRadius="8" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- En-tête de la vidéo -->
                    <Grid Grid.Row="0" Margin="20,15,20,10">
                        <StackPanel Orientation="Horizontal">
                            <material:PackIcon Kind="VideoWireless" Width="20" Height="20" Foreground="#F56565" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Flux Vidéo en Direct" FontSize="16" FontWeight="SemiBold" Foreground="White"/>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Text="Caméra 1" Foreground="#A0AEC0" FontSize="14" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Border Background="#1E293B" CornerRadius="4" Padding="8,4">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="8" Height="8" Fill="#F56565" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                    <TextBlock Text="EN DIRECT" Foreground="#F56565" FontSize="12" FontWeight="SemiBold"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!-- Flux vidéo -->
                    <Border Grid.Row="1" Background="#1E293B" Margin="40,0,40,15">
                        <Grid>
                            <Image x:Name="cameraPreview" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Panneau de contrôle -->
                    <Grid Grid.Row="2" Margin="20,0,20,20">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Boutons de contrôle -->
                        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">



                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Pied de page -->
        <Border Grid.Row="2" Background="#252A41" Padding="15" Margin="0,20,0,0">
            <Grid>
                <TextBlock Text="© 2025 Smart Parking System" Foreground="#A0AEC0" 
                           FontSize="12" HorizontalAlignment="Left"/>
                <TextBlock Text="Version 2.5.1" Foreground="#A0AEC0" 
                           FontSize="12" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Page>
