<Page x:Class="SmartParking.VueDensemble"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:material="http://materialdesigninxaml.net/winfx/xaml/themes"
      mc:Ignorable="d"
      d:DesignHeight="1040" d:DesignWidth="1500"
      Title="Vue d'ensemble du Parking">

    <Page.Resources>
        <Style x:Key="StatCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2E3A59"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.15" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="StatNumberStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="StatLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#A0AEC0"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <Style x:Key="ReservationCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#2E3A59"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="1" BlurRadius="5" Opacity="0.15" Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DatePickerTextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#1E293B"/>
            <Setter Property="BorderBrush" Value="#4FD1C5"/>
        </Style>

        <Style x:Key="DeleteButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F56565"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E53E3E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FieldLabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#A0AEC0"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>

        <Style x:Key="FieldValueStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#1A1E2C" Offset="0"/>
                <GradientStop Color="#121420" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- En-tête -->
        <Border Grid.Row="0" Background="#252A41" Padding="20" Margin="0,0,0,20">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <material:PackIcon Kind="Parking" Width="32" Height="32" Foreground="#4FD1C5" VerticalAlignment="Center" Margin="0,0,12,0"/>
                    <TextBlock Text="VUE D'ENSEMBLE DU PARKING" 
                               Foreground="White"
                               FontSize="24" FontWeight="SemiBold"
                               VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect ShadowDepth="1" BlurRadius="2" Opacity="0.2" Color="Black"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <TextBlock Text="Mise à jour en temps réel" Foreground="#4FD1C5" FontSize="14" 
                           HorizontalAlignment="Right" VerticalAlignment="Center"/>
            </Grid>
        </Border>

        <!-- Contenu principal -->
        <Grid Grid.Row="1" Margin="20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Cartes de statistiques -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Places Occupées -->
                <Border Grid.Column="0" Style="{StaticResource StatCardStyle}" Grid.ColumnSpan="2" Margin="0,10,10,10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="TextOccupe" Text="0" Style="{StaticResource StatNumberStyle}" Foreground="#F56565"/>

                        </StackPanel>
                        <TextBlock Text="Places occupées" Style="{StaticResource StatLabelStyle}"/>
                    </StackPanel>
                </Border>

                <!-- Places Disponibles -->
                <Border Grid.Column="2" Style="{StaticResource StatCardStyle}" Grid.ColumnSpan="2" Margin="10,10,0,10">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <TextBlock x:Name="TextLibre" Text="0" Style="{StaticResource StatNumberStyle}" Foreground="#48BB78"/>

                        </StackPanel>
                        <TextBlock Text="Places disponibles" Style="{StaticResource StatLabelStyle}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Liste des réservations -->
            <Border Grid.Row="1" Background="#2E3A59" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- En-tête de la liste -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <TextBlock Text="Liste des Réservations" Style="{StaticResource SectionTitleStyle}"/>
                        <Border Background="#4FD1C5" Height="2" Width="60" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,30,0,0"/>

                        <!-- Section de filtrage modifiée -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                            <!-- Date Picker avec style amélioré -->
                            <Border Background="#1E293B" CornerRadius="8" Margin="0,0,10,0">
                                <DatePicker x:Name="DateFiltre" Width="150" Margin="5"
                                    Background="Transparent" Foreground="White"
                                    BorderBrush="Transparent" BorderThickness="0"
                                    SelectedDateFormat="Short" Height="30">
                                    <DatePicker.Resources>
                                        <Style TargetType="DatePickerTextBox">
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Background" Value="Transparent"/>
                                            <Setter Property="BorderBrush" Value="Transparent"/>
                                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>

                            <!-- Bouton Filtrer avec style amélioré -->
                            <Button Content="Filtrer" Width="100" Height="30" Margin="0,0,10,0"
                                Background="#4FD1C5" Foreground="White" FontWeight="SemiBold"
                                BorderBrush="#38B2AC" BorderThickness="0"
                                Cursor="Hand" Click="BtnFiltrer_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.2" Color="Black"/>
                                </Button.Effect>
                            </Button>

                            <!-- Bouton Réinitialiser avec style amélioré -->
                            <Button Content="Réinitialiser" Width="120" Height="30"
                                Background="#2D3748" Foreground="White" FontWeight="SemiBold"
                                BorderBrush="#4A5568" BorderThickness="0"
                                Cursor="Hand" Click="BtnReinitialiser_Click">
                                <Button.Resources>
                                    <Style TargetType="Border">
                                        <Setter Property="CornerRadius" Value="8"/>
                                    </Style>
                                </Button.Resources>
                                <Button.Effect>
                                    <DropShadowEffect ShadowDepth="1" BlurRadius="3" Opacity="0.2" Color="Black"/>
                                </Button.Effect>
                            </Button>
                        </StackPanel>
                    </Grid>

                    <!-- Liste des réservations -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="ListViewReservations" ItemsSource="{Binding Reservations}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Style="{StaticResource ReservationCardStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="0.8*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="1.5*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- ID Réservation -->
                                            <Border Grid.Column="0" Background="#1E293B" CornerRadius="4" Padding="12" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <TextBlock Text="Réservation #" Style="{StaticResource FieldLabelStyle}"/>
                                                    <TextBlock Text="{Binding IDReservation}" Style="{StaticResource FieldValueStyle}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Date -->
                                            <Border Grid.Column="1" Background="#1E293B" CornerRadius="4" Padding="12" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                        <material:PackIcon Kind="Calendar" Width="14" Height="14" Foreground="#A0AEC0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="Date" Style="{StaticResource FieldLabelStyle}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding DateReservationFormatted}" Style="{StaticResource FieldValueStyle}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Durée -->
                                            <Border Grid.Column="2" Background="#1E293B" CornerRadius="4" Padding="12" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                        <material:PackIcon Kind="Clock" Width="14" Height="14" Foreground="#A0AEC0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="Durée" Style="{StaticResource FieldLabelStyle}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding TempsReservationFormatted}" Style="{StaticResource FieldValueStyle}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Immatriculation -->
                                            <Border Grid.Column="3" Background="#1E293B" CornerRadius="4" Padding="12" Margin="0,0,10,0">
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,3">
                                                        <material:PackIcon Kind="Car" Width="14" Height="14" Foreground="#A0AEC0" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                        <TextBlock Text="Immatriculation" Style="{StaticResource FieldLabelStyle}"/>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding Immatriculation}" Style="{StaticResource FieldValueStyle}"/>
                                                </StackPanel>
                                            </Border>

                                            <!-- Bouton Supprimer -->
                                            <Button Grid.Column="4" Content="✖" Style="{StaticResource DeleteButtonStyle}"
                                                    Command="{Binding DeleteCommand}"
                                                    VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>

        <!-- Pied de page -->
        <Border Grid.Row="2" Background="#252A41" Padding="15" Margin="0,20,0,0">
            <Grid>
                <TextBlock Text="© 2025 Smart Parking System" Foreground="#A0AEC0" 
                   FontSize="14" HorizontalAlignment="Left"/>
                <TextBlock Text="Version 2.5.1" Foreground="#A0AEC0" 
                   FontSize="14" HorizontalAlignment="Right"/>
            </Grid>
        </Border>
    </Grid>
</Page>