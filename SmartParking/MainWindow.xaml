<Window x:Class="SmartParking.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion" Height="400" Width="800" WindowStartupLocation="CenterScreen"
        Background="#F0F2F5">
    <Grid Margin="0,0,10,0">
        <Border Width="350" Padding="20" Background="White" CornerRadius="10" 
                VerticalAlignment="Center" HorizontalAlignment="Center" 
                Effect="{DynamicResource ShadowEffect}" Height="274">
            <StackPanel>
                <TextBlock Text="Connexion" FontSize="22" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,15"/>

                <TextBlock Text="Utilisateur :" FontWeight="SemiBold" />
                <TextBox x:Name="UsernameTextBox" Height="35" Margin="0,5,0,10" 
                         Padding="5" BorderThickness="1" BorderBrush="Gray" />

                <TextBlock Text="Mot de passe :" FontWeight="SemiBold" />
                <PasswordBox x:Name="PasswordBox" Height="35" Margin="0,5,0,15" 
                             Padding="5" BorderThickness="1" BorderBrush="Gray" />

                <Button Content="Se connecter" Width="150" Height="40" 
                        Background="#0078D4" Foreground="White" FontSize="14"
                        FontWeight="Bold" BorderThickness="0" Cursor="Hand"
                        HorizontalAlignment="Center" Click="LoginButton_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#0078D4"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Width" Value="150"/>
                            <Setter Property="Height" Value="40"/>
                            <Setter Property="Margin" Value="10"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#005A9E"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#003D73"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
